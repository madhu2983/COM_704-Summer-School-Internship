//11.Array Challenge-2
using namespace std;
int main() {
    int n;
    cin>>n;
    int arr[n]; 
    for(int i = 0; i < n; i++) {
        cin >> arr[i];
    }
    int count=1;
    int max=arr[0];
    for(int i=1;i<n;i++){
        if(arr[i]>max){
            max=arr[i];
            count++;
    }
    }
    cout<< count <<endl;
    return 0;
}
